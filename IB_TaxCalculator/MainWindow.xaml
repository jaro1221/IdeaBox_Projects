<Window x:Class="IB_TaxCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IB_TaxCalculator"
        mc:Ignorable="d"
        Title="TaxCalculator" Height="274.4" Width="142.4" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Margin="10" Name="taxListButton">Tax List</Button>
            <Label Margin="10" Padding="0">Country</Label>
            <ComboBox Name="comboBox" IsEditable="True" Margin="0,-8,0,0" SelectionChanged="comboBox_SelectionChanged"/>
            <Label FontSize="10" HorizontalAlignment="Left" Name="taxLabel" Margin="0"></Label>
            <TextBox Name="costTextBox" Margin="5" Padding="0,0,0,0"/>
            <Button Name="calculateButton" Margin="2" Click="calculateButton_Click">Calculate</Button>
            <Label FontSize="20" HorizontalAlignment="Center" Name="taxValueLabel" Margin="0"></Label>
            <Label FontSize="20" HorizontalAlignment="Center" Name="resultLabel" Margin="0,0,0,0"></Label>
        </StackPanel>
    </Grid>
</Window>
